<html>
<body>
	<h1>Listando os produtos</h1>

	<table border="1px">
		<thead>
			<tr>
				<td>id</td>
				<td>titulo</td>
				<td>descricao</td>
				<td>preco</td>
				<td>remover</td>
			</tr>
			
		</thead>
		<tbody>
			<%	if(lista){

				for(var i=0; i<lista.length; i++){	%>

				<tr>
					<td><%= lista[i].id %></td>
					<td><%= lista[i].titulo %></td>
					<td><%= lista[i].descricao %></td>
					<td><%= lista[i].preco %></td>
					<td><a href="/produtos/<%=lista[i].id%>" >X</a></td>
				</tr>

			<%	}}else{
			%>
			<p>Não há produtos!</p>
			<%
			}	
			%>
			<tr>
				
			</tr>
			
		</tbody>
	</table>
</body>
</html>